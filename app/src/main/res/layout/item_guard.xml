<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/layout_background"
    android:backgroundTint="@color/themecolor">

    <TextView
        android:id="@+id/guard_sportname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/guard_Starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/guard_Endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/guard_Rollno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/guard_tableno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/guard_bookedtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yk_neophyte"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/guard_btn_reached"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_booking"
            android:fontFamily="@font/montserrat_bold"
            android:text="Reached." />

        <Button
            android:id="@+id/guard_btn_notreached"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cancel_booking"
            android:fontFamily="@font/montserrat_bold"
            android:text="Not Reached" />

    </LinearLayout>
</LinearLayout>